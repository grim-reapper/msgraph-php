{
    "name": "grim-reapper/msgraph-php",
    "description": "A comprehensive PHP package for Microsoft Graph API integration with OAuth 2.0 authentication, OneDrive file management, and document conversion capabilities",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "microsoft",
        "graph",
        "api",
        "onedrive",
        "oauth2",
        "php",
        "sdk",
        "office365",
        "azure"
    ],
    "authors": [
        {
            "name": "Grim Reapper",
            "email": "dev@grim-reapper.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "microsoft/microsoft-graph": "^1.109",
        "guzzlehttp/guzzle": "^7.5",
        "league/oauth2-client": "^2.6",
        "symfony/cache": "^6.3",
        "psr/log": "^3.0",
        "psr/simple-cache": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.15",
        "mockery/mockery": "^1.5",
        "symfony/var-dumper": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "GrimReapper\\MsGraph\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GrimReapper\\MsGraph\\Tests\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/grim-reapper/msgraph-php/issues",
        "source": "https://github.com/grim-reapper/msgraph-php",
        "docs": "https://github.com/grim-reapper/msgraph-php/tree/main/docs"
    },
    "homepage": "https://github.com/grim-reapper/msgraph-php",
    "version": "1.0.0",
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "quality": [
            "@phpstan",
            "@cs:check",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
